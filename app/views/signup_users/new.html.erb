<% provide :title, t('.title') %>

<div class='col-xl-offset-8 col-md-offset-6 col-xl-4 col-md-6'>
	<div class='card'>
    <div class='card-header'>
      <%= t '.title' %>
    </div>
	  <div class='card-block'>
			<%= form_for(@user, url: signup_users_path, html: { class: 'form' }) do |f| %>
				<div class='form-group'>
					<%= f.text_field :first_name, class: 'form-control', error_html: { class: 'has-danger' }, placeholder: true %>
					<%= error_messages @user, :first_name %>
				</div>
				<div class='form-group'>
					<%= f.text_field :last_name, class: 'form-control', placeholder: true %>
					<%= error_messages @user, :last_name %>
				</div>
				<div class='form-group'>
					<%= f.text_field :email, class: 'form-control', placeholder: true %>
					<%= error_messages @user, :email %>
				</div>
				<div class='form-group'>
					<%= f.password_field :password, class: 'form-control', placeholder: true %>
					<%= error_messages @user, :password %>
				</div>
				<div class='form-group'>
					<%= f.password_field :password_confirmation, class: 'form-control', placeholder: true %>
					<%= error_messages @user, :password_confirmation %>
				</div>
				<div class='form-group'>
					<%= f.label :birth_date %><br>
					<%= f.date_select :birth_date, { start_year: User.not_younger.year, end_year: User.not_older.year, prompt: true }, class: 'form-control c-select date-select' %>
					<%= error_messages @user, :birth_date %>
				</div>
        <label class='c-input c-radio'>
          <%= f.radio_button :gender, :male %>
          <span class='c-indicator'></span>
          <%= User.human_attribute_name('gender.male') %>
        </label>
        <label class='c-input c-radio'>
          <%= f.radio_button :gender, :female %>
          <span class='c-indicator'></span>
          <%= User.human_attribute_name('gender.female') %>
        </label>
				<br>
				<%= error_messages @user, :gender %>
				<br>
				<%= f.submit t('.submit'), class: 'btn btn-primary' %>
		  <% end %>
		</div>
	</div>
</div>